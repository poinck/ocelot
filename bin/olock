#!/bin/bash
#
# olock locks the display using "ocelot-slock".
#
#    ^   ^
#  +-------+
#  |  o_O  |
#  |  >.<  |__/
#  +-------+
#
# ocelot by AndrÃ© Klausnitzer, CC0

# initial configuration
OCELOT_PATH=""
if [[ -f ~/.ocelotrc ]] ; then
    . ~/.ocelotrc
    if [[ -n "$ocelot_path" ]] ; then
        OCELOT_PATH="$ocelot_path"
    fi
    if [[ -n "$lockscreen" ]] ; then
        :
    else
        echo "lockscreen not set, using default lockscreen"
        lockscreen="ocelot-slock"
    fi
    if [[ -n "$lockscreen_hibernate" ]] ; then
        :
    else
        lockscreen_hibernate="systemctl hibernate -i"
    fi
else
    echo "~/.ocelotrc does not exist"
fi

if [[ "$1" == "hibernate" ]] ; then
    :
    $( $lockscreen $lockscreen_hibernate )
elif [[ "$1" == "suspend" ]] ; then
    echo "not implemented"
elif [[ "$1" == "ask" ]] ; then
    echo "not implemented"
else
    $( $lockscreen )
fi


