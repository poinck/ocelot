#!/bin/bash
#
# oterminal opens a terminal with options suitable for ocelot
#
#    ^   ^
#  +-------+
#  |  o_O  |
#  |  >.<  |__/
#  +-------+
#
# ocelot by AndrÃ© Klausnitzer, CC0

SCALE=1
if [[ -f ~/.ocelotrc ]] ; then
    . ~/.ocelotrc
    if [[ -n "$scale" ]] ; then
        SCALE="$scale"
    fi
else
    echo "~/.ocelotrc does not exist"
fi

pixelsize=$(( 9*SCALE ))
dmenu_run -nb "#1c1c1c" -nf "#aaaaaa" -sf "#1c1c1c" -sb "#6767a1" -fn monospace:size=${pixelsize}

