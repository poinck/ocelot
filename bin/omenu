#!/bin/bash
#
# oterminal opens a terminal with options suitable for ocelot
#
#    ^   ^
#  +-------+
#  |  o_O  |
#  |  >.<  |__/
#  +-------+
#
# ocelot by AndrÃ© Klausnitzer, CC0

source ${OCELOT_PATH}bin/outils.sh

SCALE=1
if [[ -f ~/.ocelotrc ]] ; then
    . ~/.ocelotrc
    if [[ -n "$scale" ]] ; then
        SCALE="$scale"
    fi
else
    echo "~/.ocelotrc does not exist"
fi

pixelsize=$(( 11*SCALE ))
dmenu_run -nb "#1c1c1c" -nf "#$cdarkfont" -sf "#ffffff" -sb "#$cdarkpurple" -fn monospace:bold:size=${pixelsize} -p 'run: '

