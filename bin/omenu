#!/bin/bash
#
# oterminal opens a terminal with options suitable for ocelot
#
#    ^   ^
#  +-------+
#  |  o_O  |
#  |  >.<  |__/
#  +-------+
#
# ocelot by AndrÃ© Klausnitzer, CC0

source ${OCELOT_PATH}bin/outils.sh

SCALE=1
if [[ -f ~/.ocelotrc ]] ; then
    . ~/.ocelotrc
    if [[ -n "$scale" ]] ; then
        SCALE="$scale"
    fi
else
    echo "~/.ocelotrc does not exist"
fi

pixelsize=$(( 12*SCALE ))
dmenu_run -nb "#$cdarkgrey" -nf "#$cdarkfont" -sf "#$cfont" -sb "#$cdarkblue" -fn Monoid:bold:pixelsize=${pixelsize} -p ''

