#!/bin/bash
#
# oterminal opens a terminal with options suitable for ocelot
#
#    ^   ^
#  +-------+
#  |  o_O  |
#  |  >.<  |__/
#  +-------+
#
# ocelot by AndrÃ© Klausnitzer, CC0

source ${OCELOT_PATH}bin/outils.sh

SCALE=1
if [[ -f ~/.ocelotrc ]] ; then
    . ~/.ocelotrc
    if [[ -n "$scale" ]] ; then
        SCALE="$scale"
    fi
else
    echo "~/.ocelotrc does not exist"
fi

pixelsize=$(( 13*SCALE ))
borderpixels=$(( 4*SCALE ))
urxvt +sb -fade 25 -fadecolor '#1f1f1f' -sk -si -bg '#3f3f3f' -fg white -fn xft:Monospace:pixelsize=${pixelsize} -b ${borderpixels} -pr '#fbf236' -pr2 '#444444' -cr '#fbf236' -bc -title "bash"

