#!/bin/bash
#
# otime provides day of the week, week number, time, day of month and month
# for the ocelot side-panel
#
#    ^   ^
#  +-------+
#  |  o_O  |
#  |  >.<  |__/
#  +-------+
#
# ocelot by AndrÃ© Klausnitzer, CC0

source ${OCELOT_PATH}bin/outils.sh
SCALE=1
if [[ -f ~/.ocelotrc ]] ; then
    . ~/.ocelotrc
    if [[ -n "$scale" ]] ; then
        SCALE="$scale"
    fi
fi

# initialize scaling
_FP=$(( 9*SCALE ))      # font pixels
_BP=$(( 4*SCALE ))      # border pixels
_PW=$(( _PW*SCALE ))
_PLH=$(( _PLH*SCALE ))
_BI=$(( _PW-(_BP*2) ))  # box inner
_BTB=$(( 8*SCALE ))     # box border top, bottom and left
_BTM=$(( _BTB+_BP ))    # box inner top margin
_TA=$(( 1*SCALE))       # text adjustment

otime_content=""
get_otime() {
    year_left_margin=$(( SCALE*23 ))
    time_left_margin=$(( SCALE*20 ))
    hour=$(date '+%-H')
    minute=$(date '+%M')
    minute2=$(date '+%-M')
    minute_percent=$(( minute2*100/60 ))
    hour_percent=$(( hour*100/24 ))
    day=$(date '+%-d')
    day_percent=$(( day*100/31 ))
    month=$(date '+%-m')
    month_percent=$(( month*100/12 ))

    # test
    #hour="1"

    if [[ "$hour" -lt 10 ]] ; then
        time_left_margin=$(( SCALE*23 ))
    fi
    #otime1_content="otime1:=\n^pa(${time_left_margin};0)^fg(#ffffff)${hour}:$(date '+%M')"
    otime1_content="time ^fg(#${cfont})$hour^fg(#${cdarkfont}):^fg(#${cfont})$minute ${cdarkgrey} ${hour_percent} $cdarkblue ${minute_percent} $cdarkpurple"
    #otime_content="otime:=^fg(#ffffff)$(date '+%a,') ^fg(#729fcf)$(date '+W%-W')==^fg(#ffffff)$(date '+%_d.') ^fg(#729fcf)$(date '+%b');;#173252--#173252" # #3465a4 #173252
    otime_content="dayweek ^fg(#${cfont})$(date '+%a')_^fg(#${cdarkfont})$(date '+W%-W') $cdarkgrey"
    otime3_content="date ^fg(#${cfont})${day}_^fg(#${cdarkfont})$(date '+%b') $cdarkgrey ${day_percent} $cdarkblue ${month_percent} $cdarkpurple"
    #otime2_content="otime2:=^pa(${year_left_margin};0)^fg(#3465a4)$(date '+%Y')"
    otime2_content="year ^fg(#${cdarkfont})$(date '+%Y') $cdarkgrey"
}

ofifo="/tmp/ocollector.fifo$OCELOT_INSTANCE"
while true ; do
    get_otime

    #echo "[DEBUG] $otime1_content"
    echo "$otime1_content" > "$ofifo"
    echo "$otime_content" > "$ofifo"
    echo "$otime3_content" > "$ofifo"
    echo "$otime2_content" > "$ofifo"
    sleep 15
done
