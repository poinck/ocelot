#!/bin/bash
#
# owterminal opens a white terminal with options suitable for ocelot
#
#    ^   ^
#  +-------+
#  |  o_O  |
#  |  >.<  |__/
#  +-------+
#
# ocelot by AndrÃ© Klausnitzer, CC0

source ${OCELOT_PATH}bin/outils.sh

SCALE=1
if [[ -f ~/.ocelotrc ]] ; then
    . ~/.ocelotrc
    if [[ -n "$scale" ]] ; then
        SCALE="$scale"
    fi
else
    echo "~/.ocelotrc does not exist"
fi

pixelsize=$(( 12*SCALE ))
borderpixels=$(( 4*SCALE ))
xrdb -merge ${OCELOT_PATH}config/wterminal_xresources
urxvt +sb -fade 25 -fadecolor '#a8a8a8' -sk -si -bg '#c8c8c8' -fg black -fn "xft:Monoid:pixelsize=${pixelsize}" -b ${borderpixels} -cr '#7f827c' -bc -title "wash" &

# switch back to xressources optimized for dark terminals
xrdb -merge ~/.Xresources
