!-*-{ Xft settings
Xft*dpi:       96
Xft*antialias: True
Xft*hinting:   Full
!-*-}


!-*- Perl extensions -*-
URxvt.perl-ext-common:default,clipboard,matcher,keyboard-select
URxvt.keysym.M-u:     perl:url-select:select_next
URxvt.url-launcher:   /usr/bin/firefox -P poinck
URxvt.underlineURLs:  False
URxvt.matcher.button: 1
URxvt.keysym.M-Escape:perl:keyboard-select:activate
URxvt.keysym.M-c:     perl:clipboard:copy
URxvt.keysym.M-v:     perl:clipboard:paste
URxvt.keysym.M-C-v:   perl:clipboard:paste_escaped
!URxvt.copyCommand:   xsel -ib
!URxvt.pasteCommand:  xsel -ob
!Comment this if you dont want copy when text is selected
URxvt.clipboard.autocopy: true

! yellow pointer and blinky yellow curser
URxvt.cursorColor: #fbf236
URxvt.cursorBlink: true
Urxvt.cursorUnderline: false
URxvt.pointerColor: #fbf236

! switch font-size ondemand
URxvt.keysym.M-C-3: command:\033]50;xft:Monospace:pixelsize=13\007
URxvt.keysym.M-C-4: command:\033]50;xft:Monospace:pixelsize=20\007
URxvt.keysym.M-C-5: command:\033]50;xft:Monospace:pixelsize=26\007

